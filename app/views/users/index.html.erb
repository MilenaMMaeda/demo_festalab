<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<%= form_tag(users_path, method: :get) do %>
  <%= text_field_tag :query, params[:query], placeholder: 'Digite sua busca' %>
  <%= submit_tag 'Buscar' %>
<% end %>


<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
